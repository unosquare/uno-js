{
  "name": "uno-js",
  "version": "0.2.2",
  "description": "Javascript common used functions, zero dependencies",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "prettier": "prettier --check src/**/*.ts*",
    "prettier:fix": "prettier --write src/**/*.ts*",
    "codestyle:fix": "npm run lint:fix && npm run prettier:fix",
    "build": "tsc",
    "preparepackage": "npm run build && npm run copypackage",
    "copypackage": "npx shx cp package.json dist"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 95,
        "lines": 90,
        "statements": -80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-js.git"
  },
  "keywords": [
    "Javascript",
    "Functions",
    "JS"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-js/issues"
  },
  "homepage": "https://github.com/unosquare/uno-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.2.2",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
