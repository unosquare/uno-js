{
  "name": "uno-js",
  "version": "0.2.2",
  "description": "Javascript common used functions, zero dependencies",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "cest": "jest --collectCoverage",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "build": "tsc",
    "preparepackage": "npm run build && npm run copypackage",
    "copypackage": "npx shx cp package.json dist"
  },
  "jest": {
    "automock": false,
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-js.git"
  },
  "keywords": [
    "Javascript",
    "Functions",
    "JS"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-js/issues"
  },
  "homepage": "https://github.com/unosquare/uno-js#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  }
}
