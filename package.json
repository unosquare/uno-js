{
  "name": "uno-js",
  "version": "2.0.0",
  "description": "Javascript common used functions, zero dependencies",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "prettier": "prettier --check src/**/*.ts*",
    "prettier:fix": "prettier --write src/**/*.ts*",
    "codestyle:fix": "npm run lint:fix && npm run prettier:fix",
    "build": "tsc",
    "preparepackage": "npm run build && npm run copypackage",
    "copypackage": "npx shx cp package.json dist"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsconfig": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 95,
        "lines": 90,
        "statements": -80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-js.git"
  },
  "keywords": [
    "Javascript",
    "Functions",
    "JS"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-js/issues"
  },
  "homepage": "https://github.com/unosquare/uno-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
