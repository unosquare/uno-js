{
  "name": "uno-js",
  "version": "0.2.2",
  "description": "Javascript common used functions, zero dependencies",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "build": "tsc",
    "preparepackage": "npm run build && npm run copypackage",
    "copypackage": "npx shx cp package.json dist"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 60,
        "lines": 70,
        "statements": -110
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-js.git"
  },
  "keywords": [
    "Javascript",
    "Functions",
    "JS"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-js/issues"
  },
  "homepage": "https://github.com/unosquare/uno-js#readme",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.4.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
