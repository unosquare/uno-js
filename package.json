{
  "name": "uno-js",
  "version": "0.2.0",
  "description": "Javascript common used functions",
  "main": "index.js",
  "scripts": {
    "test": "npx nyc jasmine-ts test/**/*.spec.ts",
    "coverage": "npx nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "build": "tsc",
    "preparepackage": "npm run build && npm run copypackage",
    "copypackage": "npx shx cp package.json dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-js.git"
  },
  "keywords": [
    "Javascript",
    "Functions",
    "JS"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-js/issues"
  },
  "homepage": "https://github.com/unosquare/uno-js#readme",
  "devDependencies": {
    "@types/jasmine": "^3.3.15",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jasmine": "^3.1.0",
    "jasmine-ts": "^0.2.1",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts",
      "dist"
    ]
  }
}
